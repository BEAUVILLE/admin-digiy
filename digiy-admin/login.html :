<body>
  <div class="login-card">
    <div class="logo">ü¶Ö</div>
    <h1>DIGIY Admin</h1>
    <div class="subtitle">Connexion s√©curis√©e</div>
    
    <div class="error" id="errorMsg">‚ùå Mot de passe incorrect</div>
    
    <form id="loginForm">
      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input 
          type="password" 
          id="password" 
          placeholder="Entrez le mot de passe"
          autocomplete="current-password"
          required
        >
      </div>
      
      <button type="submit" class="btn" id="loginBtn">
        üîì Se connecter
      </button>
    </form>
  </div>

  <script>
    const ADMIN_PASSWORD = "DIGIY2026"; // ‚Üê CHANGE CE MOT DE PASSE !
    
    const form = document.getElementById('loginForm');
    const passwordInput = document.getElementById('password');
    const loginBtn = document.getElementById('loginBtn');
    const errorMsg = document.getElementById('errorMsg');
    
    // V√©rifier si d√©j√† connect√©
    const isLoggedIn = sessionStorage.getItem('digiy_admin_auth');
    if (isLoggedIn === 'true') {
      window.location.href = 'index.html';
    }
    
    // Focus automatique sur le champ
    passwordInput.focus();
    
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const password = passwordInput.value.trim();
      
      if (password === ADMIN_PASSWORD) {
        // Connexion r√©ussie
        sessionStorage.setItem('digiy_admin_auth', 'true');
        loginBtn.textContent = '‚úÖ Connexion...';
        loginBtn.disabled = true;
        
        setTimeout(() => {
          window.location.href = 'index.html';
        }, 500);
      } else {
        // Erreur
        errorMsg.classList.add('show');
        passwordInput.value = '';
        passwordInput.focus();
        
        // Secouer l'input
        passwordInput.style.animation = 'shake 0.5s';
        setTimeout(() => {
          passwordInput.style.animation = '';
        }, 500);
        
        // Cacher l'erreur apr√®s 3s
        setTimeout(() => {
          errorMsg.classList.remove('show');
        }, 3000);
      }
    });
  </script>
